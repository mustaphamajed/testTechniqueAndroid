<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_marginHorizontal="20dp"
    tools:context=".CongratsFirstActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="10dp"
        android:textSize="22sp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Congradulation!" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"

        android:layout_marginHorizontal="60dp"
        android:textSize="22sp"
        android:gravity="center"

        android:text="@string/congratstext" />
    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/vector" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/chat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        >

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="44dp"
            android:background="@drawable/custom_btn"
            android:drawableTint="@color/backgroundColor"
            android:padding="8dp"
            android:text="Add another child"
            android:textAllCaps="false"
            android:textColor="@color/backgroundColor" />
        <Button
            android:id="@+id/continu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:background="@drawable/custom_btn"
            android:drawableRight="@drawable/arrow_right_24"
            android:drawableTint="@color/backgroundColor"
            android:padding="8dp"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="@color/backgroundColor" />

    </LinearLayout>
</LinearLayout>